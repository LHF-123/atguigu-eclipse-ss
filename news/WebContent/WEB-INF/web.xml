  	<servlet-class>com.news.controller.NewsAppQueryServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>NewsAppQueryServlet</servlet-name>
  	<url-pattern>/appQueryNews</url-pattern>
