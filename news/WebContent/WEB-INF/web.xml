  	<servlet-class>com.news.controller.NewsUpdateServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>NewsUpdateServlet</servlet-name>
  	<url-pattern>/updateNews</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>NewsDeleteServlet</servlet-name>
  	<servlet-class>com.news.controller.NewsDeleteServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>NewsDeleteServlet</servlet-name>
  	<url-pattern>/deleteNews</url-pattern>
