  </servlet>
  <servlet-mapping>
  	<servlet-name>ChannelDeleteServlet</servlet-name>
  	<url-pattern>/deleteChannel</url-pattern>
  </servlet-mapping>
  
  <!-- 新闻管理 -->
  <servlet>
  	<servlet-name>NewsQueryServlet</servlet-name>
  	<servlet-class>com.news.controller.NewsQueryServlet</servlet-class>
  </servlet>
  <servlet-mapping>
