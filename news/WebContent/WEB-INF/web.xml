  </servlet>
  <servlet-mapping>
  	<servlet-name>UserDeleteServlet</servlet-name>
  	<url-pattern>/deleteUser</url-pattern>
  </servlet-mapping>
  
  <!-- 新闻栏目管理 -->
  <servlet>
